{
   "useYearRange": true,
   "ruleSet": [
      {
         "target": "**/*.{css,ts,tsx}",
         "targetExclude": ["node_modules/**", ".next/**", "next-env.d.ts"],
         "headerFile": "header-templates/general.txt",
         "headerDelimiter": "^(?![\\/ ]\\*)."
      },
      {
         "target": "next.config.mjs",
         "headerFile": "header-templates/next-config.txt",
         "headerDelimiter": "^(?![\\/ ]\\*)."
      },
      {
         "target": "postcss.config.mjs",
         "headerFile": "header-templates/postcss-config.txt",
         "headerDelimiter": "^(?![\\/ ]\\*)."
      }
   ]
}
