{
   "useYearRange": true,
   "ruleSet": [
      {
         "target": "**/*.{css,ts,tsx}",
         "targetExclude": ["node_modules/**", ".next/**", "next-env.d.ts"],
         "headerFile": "codecap/general-header.txt",
         "headerDelimiter": "^(?![\\/ ]\\*)."
      },
      {
         "target": "next.config.mjs",
         "headerFile": "codecap/next-config-header.txt",
         "headerDelimiter": "^(?![\\/ ]\\*)."
      },
      {
         "target": "postcss.config.mjs",
         "headerFile": "codecap/postcss-config-header.txt",
         "headerDelimiter": "^(?![\\/ ]\\*)."
      }
   ]
}
